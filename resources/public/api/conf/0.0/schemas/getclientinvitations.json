{
  "type": "object",
  "properties": {
    "_links": {
      "type": "object",
      "properties": {
        "self": {
          "type": "object",
          "properties": {
            "href": {
              "type": "string",
              "description": "Link back to this resource"
            }
          },
          "required": [
            "href"
          ]
        },
        "invitations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "href": {
                "type": "string",
                "description": "Retrieves a list of invitations sent by an agency"
              }
            },
            "required": [
              "href"
            ]
          }
        }
      },
      "required": [
        "self",
        "invitations"
      ]
    },
    "_embedded": {
      "type": "object",
      "properties": {
        "invitations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "_links": {
                "type": "object",
                "properties": {
                  "self": {
                    "type": "object",
                    "properties": {
                      "href": {
                        "type": "string",
                        "description": "Link back to this resource"
                      }
                    },
                    "required": [
                      "href"
                    ]
                  },
                  "accept": {
                    "type": "object",
                    "properties": {
                      "href": {
                        "type": "string",
                        "description": "Link to accept the invitation"
                      }
                    },
                    "required": [
                      "href"
                    ]
                  },
                  "reject": {
                    "type": "object",
                    "properties": {
                      "href": {
                        "type": "string",
                        "description": "Link to reject the invitation"
                      }
                    },
                    "required": [
                      "href"
                    ]
                  }
                },
                "required": [
                  "self",
                  "accept",
                  "reject"
                ]
              },
              "created": {
                "type": "string",
                "description": "Creation time of the request (RFC3339 / ISO8601 format)"
              },
              "lastUpdated": {
                "type": "string",
                "description": "Creation time of the request (RFC3339 / ISO8601 format)"
              },
              "arn": {
                "type": "string",
                "description": "The Agent Registration Number for the calling agency"
              },
              "regime": {
                "type": "string",
                "description": "The tax regime specified in the invitation"
              },
              "clientId": {
                "type": "string",
                "description": "Client's top level ID for their MTD registration (not regime specific)"
              },
              "status": {
                "description" : "The status of the request at the time the request was fulfilled ",
                "type": "string",
                "oneOf": [
                  {
                    "enum": [ "Pending" ],
                    "description": "The invitation has been created, it has not been accepted or rejected by the client. Only the service can set this status"
                  },
                  {
                    "enum": [ "Accepted" ],
                    "description": "The client has accepted the invitation. Only the client can set this status"
                  },
                  {
                    "enum": [ "Rejected" ],
                    "description": "The client has rejected the invitation. Only the client can set this status"
                  },
                  {
                    "enum": [ "Cancelled" ],
                    "description": "The agency has cancelled the invitation. Only the agency can set this status"
                  }
                ]
              }
            },
            "required": [
              "_links",
              "created",
              "lastUpdated",
              "arn",
              "regime",
              "clientId",
              "status"
            ]
          }
        }
      },
      "required": [
        "invitations"
      ]
    }
  },
  "required": [
    "_links",
    "_embedded"
  ]
}