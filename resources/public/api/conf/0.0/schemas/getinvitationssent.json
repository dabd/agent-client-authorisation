{
  "type": "object",
  "properties": {
    "_links": {
      "type": "object",
      "description": "Related resources",
      "properties": {
        "self": {
          "type": "object",
          "properties": {
            "href": {
              "type": "string",
              "description": "A reference to the current resource"
            }
          },
          "required": [
            "href"
          ]
        },
        "invitation": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "href": {
                "type": "string",
                "description": "An array of links to individual Invitation resources (see /agencies/{arn}/invitations/{invitationId}"
              }
            },
            "required": [
              "href"
            ]
          }
        }
      },
      "required": [
        "self",
        "invitation"
      ]
    },
    "_embedded": {
      "type": "object",
      "properties": {
        "invitations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "_links": {
                "type": "object",
                "properties": {
                  "cancel": {
                    "type": "object",
                    "properties": {
                      "href": {
                        "type": "string",
                        "description": "A link to cancel to this invitation"
                      }
                    },
                    "required": [
                      "href"
                    ]
                  },
                  "self": {
                    "type": "object",
                    "properties": {
                      "href": {
                        "type": "string",
                        "description": "A reference to the current resource"
                      }
                    },
                    "required": [
                      "href"
                    ]
                  }
                },
                "required": [
                  "cancel",
                  "self"
                ]
              },
              "regime": {
                "type": "string",
                "description" : "The tax regime"
              },
              "clientId": {
                "type": "string",
                "description" : "Client's top level ID for their MTD registration (not regime specific)"
              },
              "postcode": {
                "type": "string",
                "description" : "The Client's post code"
              },
              "arn": {
                "type": "string",
                "description" : "The Agency Registration Number"
              },
              "created": {
                "type": "string",
                "description" : "The invitation was created at this time"
              },
              "lastUpdated": {
                "type": "string",
                "description" : "The invitation was last updated at this time"
              },
              "status": {
                "type": "string",
                "description" : "The current status of the invitation",
                "oneOf": [
                  {
                    "enum": [ "Pending" ],
                    "description": "The invitation has been created, it has not been accepted or rejected by the client. Only the service can set this status"
                  },
                  {
                    "enum": [ "Accepted" ],
                    "description": "The client has accepted the invitation. Only the client can set this status"
                  },
                  {
                    "enum": [ "Rejected" ],
                    "description": "The client has rejected the invitation. Only the client can set this status"
                  },
                  {
                    "enum": [ "Cancelled" ],
                    "description": "The agency has cancelled the invitation. Only the agency can set this status"
                  }
                ]
              }
            },
            "required": [
              "_links",
              "regime",
              "clientId",
              "postcode",
              "arn",
              "created",
              "lastUpdated",
              "status"
            ]
          }
        }
      },
      "required": [
        "invitations"
      ]
    }
  },
  "required": [
    "_links",
    "_embedded"
  ]
}