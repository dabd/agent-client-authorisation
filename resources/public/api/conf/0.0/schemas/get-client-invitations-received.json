{
  "type": "object",
  "properties": {
    "_links": {
      "type": "object",
      "description": "Related resources",
      "properties": {
        "self": {
          "type": "object",
          "properties": {
            "href": {
              "type": "string",
              "description": "A link to the current resource"
            }
          },
          "required": [
            "href"
          ]
        },
        "invitation": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "href": {
                "type": "string",
                "description": "An array of links to individual Invitation resources"

              }
            },
            "required": [
              "href"
            ]
          }
        }
      },
      "required": [
        "self",
        "invitation"
      ]
    },
    "_embedded": {
      "type": "object",
      "properties": {
        "invitations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "_links": {
                "type": "object",
                "properties": {
                  "reject": {
                    "type": "object",
                    "properties": {
                      "href": {
                        "type": "string",
                        "description": "Link to reject the invitation"
                      }
                    },
                    "required": [
                      "href"
                    ]
                  },
                  "accept": {
                    "type": "object",
                    "properties": {
                      "href": {
                        "type": "string",
                        "description": "Link to accept the invitation"
                      }
                    },
                    "required": [
                      "href"
                    ]
                  },
                  "self": {
                    "type": "object",
                    "properties": {
                      "href": {
                        "type": "string",
                        "description": "A link to the current resource"
                      }
                    },
                    "required": [
                      "href"
                    ]
                  }
                },
                "required": [
                  "reject",
                  "accept",
                  "self"
                ]
              },
              "regime": {
                "type": "string",
                "description" : "The tax regime",
                "oneOf": [
                  {
                    "enum": [ "mtd-sa" ],
                    "description": "The Self Assessment tax regime"
                  }
                ]
              },
              "clientId": {
                "type": "string",
                "description": "Client's top level ID for their MTD registration (not regime specific)"
              },
              "postcode": {
                "type": "string",
                "description": "The Client's post code"
              },
              "arn": {
                "type": "string",
                "description": "Agent Registration Number for the calling agency"
              },
              "created": {
                "type": "string",
                "description": "Creation time of the request (RFC3339 / ISO8601 format)"
              },
              "lastUpdated": {
                "type": "string",
                "description": "Last update time of the request (RFC3339 / ISO8601 format)"
              },
              "status": {"$ref": "status.json"}
            },
            "required": [
              "_links",
              "regime",
              "clientId",
              "postcode",
              "arn",
              "created",
              "lastUpdated",
              "status"
            ]
          }
        }
      },
      "required": [
        "invitations"
      ]
    }
  },
  "required": [
    "_links",
    "_embedded"
  ]
}